<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.qdq.rulerview.MainActivity">

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="0" />

    <com.example.qdq.rulerview.RulerView
        android:id="@+id/view_rule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        app:keyValue="5"
        app:lineHeight="1.5dp"
        app:lineMaxHeight="10dp"
        app:lineMidHeight="6dp"
        app:lineMinHeight="6dp"
        app:lineSpaceWidth="20dp"
        app:maxValue="100"
        app:minValue="0"
        app:perValue="1"
        app:selectorValue="5"
        app:textColor="@color/colorAccent" />

</LinearLayout>
